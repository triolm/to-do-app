<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-3"><%=currentUser.username %> </h5>
                <% if(currentUser.bio){ %> 
                <div>
                    <h6 class="card-subtitle">About Me</h6>
                    <p class="card-text"><%=currentUser.bio %> </p>
                </div>
                <% } %> 
                <a href="/profile/edit" class="my-3 btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>
